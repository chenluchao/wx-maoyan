/* pages/search/search.wxss */
page{
	background-color: #F5F5F5;
}
.input-box{
  display: flex;
  border-bottom: 1px solid #777;
  padding: 20rpx;
}
.input-box input{
	width: 90%;
  outline: none;
}
.in-im{
	width: 75%;
	border: 1px solid #ccc;
	border-radius: 10rpx;
	background-color: white;
	position: relative;
	padding-left: 60rpx;
}
.input-box image:nth-of-type(1){
	position: absolute;
	left: 14rpx;
	top: 8rpx;
	width: 45rpx;
	height: 45rpx;
}
.input-box image:nth-of-type(2){
	position: absolute;
	right: 5rpx;
	top: 10rpx;
	width: 35rpx;
	height: 35rpx;
}
.cancel{
	margin-left: 30rpx;
	margin-top: 5rpx;
	color: red;
	font-size: 32rpx;
}
.hot-search-box{
	width: 100%;
	height: 100rpx;
	background-color: white;
}
.hot-search{
	font-size: 32rpx;
	color: #666;
	line-height: 100rpx;
	padding-left: 25rpx;
}
.movie-item{
  display: flex;
  position: relative;
  border-bottom: 2rpx solid #e5e5e5;
  background-color: white;
}

.item-img{
  width: 128rpx;
  height: 180rpx;
  margin: 30rpx 30rpx 10rpx 10rpx;
}
.item-right{
  font-size: 14px;
  margin-top: 30rpx;
}
.buy-button{
  position: absolute;
  width: 140rpx;
  height: 60rpx;
  top: 100rpx;
  right: 30rpx;
  font-size: 12px;
}
.item-right view{
  width: 380rpx;
}
.line-ellipsis {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.normal{
  color:white;
  background-color: #f03d37;
}
