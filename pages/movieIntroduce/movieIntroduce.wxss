/* pages/movieIntroduce/movieIntroduce.wxss */
.page{
	width: 100%;
    overflow: hidden;
}
.top{
    width: 100%;
    height: 380rpx;
    background-color: #6e7872; 
    padding-top: 40rpx;
    padding-left: 36rpx;
    overflow: hidden;
    display: flex;
	box-sizing: border-box;
}
.movie-img{
    width: 214rpx;
    height: 300rpx;
    overflow: hidden;
}
.movie-img image{
    width: 100%;
    height: 100%;
    display: block;
    overflow: hidden;
}
.title{
	width: 360rpx;
	height: 100%;
	padding-left: 30rpx;
	color: #fff;
}
.line-ellipsis {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.movie-nm{
	font-size: 40rpx;
	width: 360rpx;
}
.movie-nm-eng{
	font-size: 24rpx;
	margin-top: 15rpx;
}
.grade{
	font-size: 24rpx;
	margin-top: 15rpx;
}
.grade .num{
	font-size: 32rpx;
	color: #fc0;
	font-weight: bold;
}
.people{
	color: #fc0;
	font-weight: bold;
}
.movie-type,.movie-add,.movie-showtime{
	font-size: 28rpx;
	margin-top: 15rpx;
}
.movie-ver{
	padding: 4rpx;
	font-size: 14rpx;
	border: 1rpx solid #fff;
	vertical-align: middle;
}
.buy-btn-box{
	margin-top: 26rpx;
	width: 660rpx;
	height: 65rpx;
	background-color: #e54847;
	overflow: hidden;
	border-radius: 5rpx;
	margin-left: 6%;
}
.buy-btn{
	width: 100%;
	height: 100%;
	line-height: 65rpx;
	background-color: #e54847;
	color: #fff;
	font-size: 30rpx;
	text-align: center;
}

.grey{
	width: 100%;
	height: 20rpx;
	border-top: 1rpx solid #E5E5E5;
	border-bottom: 1rpx solid #E5E5E5;
	background-color: #f4f4f4;
	box-sizing: border-box;
}
.lookmovie-tell{
	font-weight: 400;
	font-size: 28rpx;
	color: #666;
	height: 60rpx;
	line-height: 60rpx;
	border-bottom: 1rpx solid #E5E5E5;
	padding-left: 30rpx;
}
.actors{
	width: 100%;
	height: 244rpx;
	border-top: 1rpx solid #E5E5E5;
	border-bottom: 1rpx solid #E5E5E5;
	overflow-x: scroll;
	box-sizing: border-box;
	white-space: nowrap;
	padding-top: 28rpx;
	display: flex;
}
.actors::-webkit-scrollbar{
	width: 0;
	height: 0;
	color: transparent;
}
.actor-one{
	width: 130rpx;
	height: 100%;
	margin-left: 20rpx;
}
.actor-img{
	width: 130rpx;
	height: 140rpx;
	overflow: hidden;
}
.actor-img image{
	width: 130rpx;
	height: 140rpx;
}
.actor-name{
	font-size: 20rpx;
	text-align: center;
	margin-top: 10rpx;
	color: #000;
}
.actor-play{
	font-size: 20rpx;
	text-align: center;
	margin-top: 10rpx;
	color: #999;
}
.talk{
	padding-left: 30rpx;
	height: 76rpx;
	line-height: 76rpx;
	box-sizing: border-box;
	border-bottom: 1rpx solid #E5E5E5;
	font-size: 28rpx;
}
.hotcommit{
	height: 66rpx;
	padding-left: 30rpx;
	font-size: 30rpx;
	line-height: 66rpx;
}
.commit-one{
	padding-left: 30rpx;
	border-bottom: 1rpx solid #E5E5E5;
}
.commit-one-top{
	margin-top: 20rpx;
	display: flex;
}
.commit-img{
	width: 70rpx;
	height: 70rpx;
	overflow: hidden;
	vertical-align: middle;
}
.commit-img image{
	width: 100%;
	height: 100%;
}
.commit-ng{
	width: 550rpx;
	font-size: 28rpx;
	vertical-align: middle;
	margin-left: 20rpx;
}
.commit-one-con{
	margin-top: 15rpx;
	padding-left: 90rpx;
	padding-right: 30rpx;
	font-size: 28rpx;
}
.commit-score{
	color: #999;
}
/* 文本点击展开收起 */
.introduce{
	width: 100%;
	margin-top: 26rpx;
	border-bottom: 1rpx solid #E5E5E5;
}
.introduce-conbox{
	width: 90%;
	height: 100%;
	margin: 0 5%;
}
.introduce-con{
	font-size: 26rpx;
	color: #555;
	display: -webkit-box;
	-webkit-box-orient:vertical;
	text-overflow: ellipsis;
	overflow:hidden;
}
.ellipsis{
  -webkit-line-clamp:3;
  opacity: 1;
}
.unellipsis{
  -webkit-line-clamp:0;
  opacity: 1;
}
.bg-updown{
	width: 40rpx;
	height: 40rpx;
}
.bg-updownbox{
	text-align: center;
}