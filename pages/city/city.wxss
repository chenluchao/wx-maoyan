/* pages/citySelect/citySelect.wxss */

.page {
  background-color: #ebebeb;
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.section-title {
  height: 80rpx;
  padding-left: 40rpx;
  line-height: 80rpx;
}

.section-list {
  background-color: #f5f5f5;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.location-item {
  height: 64rpx;
  margin-left: 30rpx;
  color: #333;
  background: #fff;
  margin-top: 30rpx;
  border: 2rpx solid #e6e6e6;
  font-size: 28rpx;
  line-height: 64rpx;
  padding: 0 40rpx;
	border-radius: 12rpx;
}

.hot-item {
  height: 64rpx;
  width: 20%;
  margin-left: 30rpx;
  color: #333;
  background: #fff;
  margin-top: 30rpx;
  border: 2rpx solid #e6e6e6;
  font-size: 28rpx;
  line-height: 64rpx;
  padding: 0 20rpx;
  text-align: center;
	border-radius: 12rpx;
}

.list {
  display: block;
}

.plain-item {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #c8c7cc;
	font-size: 32rpx;
}

.nav{
  position: fixed;
	top: 150rpx;
	right: 0;
	width: 70rpx;
	z-index: 10;
	text-align: center;
	font-size: 24rpx;
}

.nav>view{
  box-sizing: border-box;
  font-size: 24rpx;
}
