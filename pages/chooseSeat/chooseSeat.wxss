/* pages/chooseSeat/chooseSeat.wxss */
.page{
	width: 100%;
	height: auto;
	overflow: hidden;
	background-color: #f2f1f6;
}
.movie-info{
	width: 100%;
	height: 104rpx;
	padding: 30rpx 30rpx 25rpx 30rpx;
	box-sizing: border-box;
	font-size: 26rpx;
	color: #333;
	background-color: #fff;
}
.movie-info-con{
	font-size: 20rpx;
	color: #999;
}
.seatcon{
	width: 100%;
	height: 78%;
	position: absolute;
	overflow: hidden;
	top: 105rpx;
	left: 0;
	background-color: #f2f1f6;
}
.hallName{
	width: 300rpx;
	height: 30rpx;
	background-color: #e3e3e3;
	font-size: 25rpx;
	padding-top: 5rpx;
	text-align: center;
	padding-bottom: 5rpx;
	margin-left: 30%;
	color: #949494;
	border-radius: 0 0 30rpx 30rpx;
}
.seatShow{
	padding-top: 190rpx;
}
.foot{
	z-index: 3;
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
}
.showseat{
	width: 100%;
	height: 72rpx;
	background-color: #f2f1f6;
	display: flex;
	padding-left: 24%;
}
.showseat image{
	margin-left: 20rpx;
	width: 35rpx;
	height: 30rpx;
	vertical-align: middle;
}
.showseat text{
	font-size: 22rpx;
	margin-left: 10rpx;
	vertical-align: middle;
}
.chooseSeat{
	background-color: #fff;
}
.chooseSeat button{
	margin-top: 10rpx;
	margin-bottom: 10rpx;
	width: 705rpx;
	height: 70rpx;
	line-height: 80rpx;
	margin-left: 20rpx;
	background-color: #ffddb2;
	font-size: 30rpx;
	color: #fff;
}